@model IEnumerable<EDSU_SYSTEM.Models.CourseAllocation>

@{
    ViewData["Title"] = "Index";
}

<div id="PlaceHolderHere"></div>
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
               
                
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    @if (!string.IsNullOrEmpty(ViewBag.success))
                {
                    <div class="col-xl-4 col-lg-4 col-sm-4 mx-auto alert alert-success border-0 mb-4" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                        <strong>@ViewBag.success</strong>
                    </div>
                }
                    @if (!string.IsNullOrEmpty(ViewBag.err))
                    {
                        <div class="col-xl-4 col-lg-4 col-sm-4 mx-auto alert alert-danger border-0 mb-4" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                            <strong>@ViewBag.err</strong>
                        </div>
                    }
                <a asp-action="enrollcourses" asp-controller="canvas" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Enroll to LMS">
                     Enrol to LMS
                </a>
                    <div class="widget-content widget-content-area br-6">
                        <table id="html5-extension" class="table table-hover non-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Code</th>
                                    <th>Level</th>
                                    <th>Semester</th>
                                    <th>Credit Unit</th>
                                    <th>Status</th>
                                    <th>Department</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.Levels.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.Semesters.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.CreditUnit)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Courses.Departments.Name)
                                        </td>
                                       
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                       
                    </div>

                </div>
                
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->