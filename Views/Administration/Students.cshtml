

@{
    ViewData["Title"] = "UG ROLE";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <h2>Add Student to Role</h2>
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="AddUserToRole">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group">
                                <label class="control-label">User</label>
                                <select name="userId" class="form-control basic" asp-items="ViewBag.Users"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Role</label>
                                <select name="roleName" class="form-control basic" asp-items="ViewBag.Roles"></select>
                            </div>
                            
                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
