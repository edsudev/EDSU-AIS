@model EDSU_SYSTEM.Models.AssetFinance

@{
    ViewData["Title"] = "Apply - ";
}

 <div class="main-container" id="container">
    @*<partial name="_StaffDashboardPartial" />*@
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto layout-top-spacing">
                    <h4 class="text-center">EDO STATE UNIVERSITY UZAIRUE, EDO STATE.</h4>
                    <h4 class="text-center">ASSET FINANCE FORM</h4>
                    <div class="widget-content widget-content-area br-6">
                        <div class="widget-one p-3">
                            <form class="needs-validation" novalidate asp-action="AssetFinanceForm">
                                <div class="form-row">
                                    <div class="col-md-4 mb-4">
                                       <div class="form-group">
                                            <label asp-for="Name" class="control-label">Full name</label>
                                            <input asp-for="Name" class="form-control" placeholder="John Doe" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                       </div>
                                    </div>
                                    <div class="col-md-4 mb-4">
                                        <div class="form-group">
                                            <label asp-for="Phone" class="control-label">Phone</label>
                                            <input asp-for="Phone" class="form-control" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="Department" class="control-label">Department/Unit</label>
                                        <input asp-for="Department" class="form-control" />
                                        <span asp-validation-for="Department" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="TypeOfAsset" class="control-label">Type of Asset</label>
                                        <select asp-for="TypeOfAsset" class="form-control basic" asp-items="ViewBag.TypeOfAsset"></select>
                                    </div>
                                </div>
                                    <div class="col-md-4 mb-4">
                                        <div class="form-group">
                                            <label asp-for="AmountRequired" class="control-label">How much do you need?(Only if Type of asset is Cash)</label>
                                            <input asp-for="AmountRequired" class="form-control" placeholder="How much do you need?" />
                                            <span asp-validation-for="AmountRequired" class="text-danger"></span>
                                        </div>
                                    </div>
                                <div class="col-md-4 mb-4">
                                        <div class="form-group">
                                            <label asp-for="Quantity" class="control-label">Quantity</label>
                                            <input asp-for="Quantity" class="form-control" />
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                
                            </div>
                            <div class="form-row">
                                    <div class="col-md-4 mb-4">
                                        <div class="form-group">
                                            <label asp-for="DeductionStartDate" class="control-label">Deduction Start Date</label>
                                            <input asp-for="DeductionStartDate" type="date" class="form-control" />
                                            <span asp-validation-for="DeductionStartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="DeductionStartMonth" class="control-label">Deduction Start Month</label>
                                        <input asp-for="DeductionStartMonth" class="form-control" />
                                        <span asp-validation-for="DeductionStartMonth" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="MaxPeriod" class="control-label">Maximum Period</label>
                                        <input asp-for="MaxPeriod" class="form-control" placeholder="eg: 3 (Number of months)"/>
                                            <span asp-validation-for="MaxPeriod" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="AmountOfDeposit" class="control-label">Amount Of Deposit</label>
                                        <input asp-for="AmountOfDeposit" class="form-control" placeholder="1000000"/>
                                            <span asp-validation-for="AmountOfDeposit" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="SalaryId" class="control-label">Salary ID</label>
                                        <input asp-for="SalaryId" class="form-control" EDSU-123456/>
                                            <span asp-validation-for="SalaryId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="AccountNo" class="control-label">Account No</label>
                                        <input asp-for="AccountNo" class="form-control" />
                                            <span asp-validation-for="AccountNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="Bank" class="control-label">Bank Name</label>
                                        <input asp-for="Bank" class="form-control" placeholder="x-bank"/>
                                            <span asp-validation-for="Bank" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <h3>Guanrantor's Details</h3>
                            <div class="form-row">
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="GuarantorName" class="control-label">Guarantor's Name</label>
                                        <input asp-for="GuarantorName" class="form-control" />
                                        <span asp-validation-for="GuarantorName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="GuarantorPhone" class="control-label">Guarantor's Phone</label>
                                        <input asp-for="GuarantorPhone" class="form-control" />
                                        <span asp-validation-for="GuarantorPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="GuarantorAddress" class="control-label">Guarantor's Address</label>
                                        <input asp-for="GuarantorAddress" class="form-control" />
                                        <span asp-validation-for="GuarantorAddress" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="form-row">
                                    <div class="col-md-4 mb-4">
                                        <div class="form-group">
                                        <label asp-for="GuarantorDepartment" class="control-label">Guarantor's Department/Unit</label>
                                        <input asp-for="GuarantorDepartment" class="form-control" />
                                        <span asp-validation-for="GuarantorDepartment" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="GuarantorSalaryId" class="control-label">Guarantor's Salary Id</label>
                                        <input asp-for="GuarantorSalaryId" class="form-control" placeholder="EDSU-12345"/>
                                        <span asp-validation-for="GuarantorSalaryId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                                <div class="form-row">
                                    
                               @* <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label asp-for="MaxMonthForDeduction" class="control-label">Max Month For Deduction</label>
                                        <input asp-for="MaxMonthForDeduction" class="form-control" />
                                        <span asp-validation-for="MaxMonthForDeduction" class="text-danger"></span>
                                    </div>
                                </div>*@
                                

                            </div>
                            <button class="btn btn-primary mt-3" type="submit"> Submit</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
