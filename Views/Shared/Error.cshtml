@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Page</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Center content vertically */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <img src="~/images/rafiki.png" alt="Error Image" class="img-fluid mb-4" style="max-width: 300px;">
        <h1 class="display-4">Something went wrong.</h1>
        <p class="lead">Sorry for the inconvenience, we will be back shortly.</p>
        <p class="lead">For Fees/Students' account support:<br />Phone: 08059079068<br /> <strong>WhatsApp:</strong> 09125091175.<br /> Email: bursary@edouniversity.edu.ng</p>
        <p class="lead">For Technical support: info.ict@edouniversity.edu.ng</p>

        <a href="/" class="btn btn-primary">Go back to Home</a>
    </div>
</body>
</html>






