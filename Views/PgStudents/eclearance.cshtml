@model EDSU_SYSTEM.Models.PgClearance

@{
    ViewData["Title"] = "Create";
}

<div class="main-container" id="container">
    <partial name="_PgStudentDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            @if (!string.IsNullOrEmpty(ViewBag.success))
            {
                <div class="col-xl-4 col-lg-4 col-sm-4 mx-auto alert alert-success border-0 mb-4" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                    <strong>@ViewBag.success</strong>
                </div>

            }
            <div class="row layout-top-spacing">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                    <div class="widget">
                        <div class="widget-content widget-content-area p-3">
                            <form asp-action="Eclearance">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="PaymentType" class="control-label"></label>
                                    <select asp-for="PaymentType" class="form-control basic">
                                        <option>- SELECT -</option>
                                        <option value="Acceptance">Acceptance</option>
                                        <option value="Accommodation">Accommodation</option>
                                        <option value="Application Fee">Application Fee</option>
                                        <option value="EDHIS">EDHIS</option>
                                        <option value="Tuition">Tuition</option>
                                        <option value="LMS">LMS</option>
                                        <option value="SRC">SRC</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Amount" class="control-label">Amount</label>
                                    <input asp-for="Amount" class="form-control" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrderId" class="control-label">Transaction ID</label>
                                    <input asp-for="OrderId" class="form-control" placeholder="EDSU-XXXXXXXX" />
                                    <span asp-validation-for="OrderId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mode" class="control-label"></label>
                                    <select asp-for="Mode" class="form-control basic">
                                        <option>- SELECT -</option>
                                        <option value="Bank Deposit">Bank Deposit</option>
                                        <option value="Cash">Cash</option>
                                        <option value="Online-Rave">Online-Rave</option>
                                        <option value="Online-Paystack">Online-Paystack</option>
                                        <option value="POS">POS</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PaymentDate" class="control-label">Payment Date</label>
                                    <input asp-for="PaymentDate" class="form-control" />
                                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SessionId" class="control-label">Session</label>
                                    <select asp-for="SessionId" class="form-control basic" asp-items="ViewBag.SessionId">
                                        <option>- SELECT -</option>
                                    </select>
                                    <span asp-validation-for="SessionId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
