@model EDSU_SYSTEM.Models.HostelRoomDetails

@{
    ViewData["Title"] = "Room Details - ";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <h2>Create Room Details</h2>
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="RoomDetails">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="HostelId" class="control-label">Hostel</label>
                                <select asp-for="HostelId" class="form-control basic" asp-items="ViewBag.HostelId"></select>
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="RoomNo" class="control-label"></label>
                                <input asp-for="RoomNo" class="form-control" placeholder="e.g AFR001" />
                                <span asp-validation-for="RoomNo" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="BedSpaces" class="control-label"></label>
                                <input asp-for="BedSpaces" class="form-control" placeholder="5"/>
                                <span asp-validation-for="BedSpaces" class="text-danger"></span>
                            </div>
                            
                            
                            
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
