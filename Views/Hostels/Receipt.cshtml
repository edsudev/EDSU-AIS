<style>
    /*  body {
          font-family: Arial, sans-serif;
          background-color: #f5f5f5;
      }*/

      .container {
          max-width: 1200px;
          margin: 0 auto;
          padding: 20px;
      }

      .invoice {
          background-color: white;
          border-radius: 10px;
          box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
          padding: 20px;
      }

      .logo {
          width: 180px;
          height: 150px;
      }

      .university-info {
          margin-left: 20px;
      }

      .university-title {
          font-size: 24px;
          font-weight: bold;
          margin-bottom: 5px;
      }

      .university-address {
          font-size: 14px;
          color: #888;
      }

      .note {
          font-size: 16px;
          color: #666;
          margin-top: 20px;
      }

      .section-title {
          font-size: 18px;
          font-weight: bold;
          margin-bottom: 10px;
      }

      .subtitle {
          font-size: 14px;
          color: #555;
      }

      .detail {
          font-size: 16px;
          margin-bottom: 10px;
      }

      .signature {
          margin-top: 10px;
      }

          .signature img {
              height: 120px;
              margin-left: -30px;
              margin-top: -20px;
          }

      .powered-by {
          font-size: 14px;
          color: #888;
          margin-top: 20px;
          text-align: center;
      }

      .btn-print {
          background-color: #3498db;
          color: white;
          border: none;
          padding: 10px 20px;
          border-radius: 5px;
          cursor: pointer;
          transition: background-color 0.3s;
      }

          .btn-print:hover {
              background-color: #2980b9;
          }
</style>
<div class="container">
    <div class="invoice">
        <div class="row">
            <div class="col-md-4">
                <img src="~/logo.png" class="logo" alt="Logo">
                <div class="university-info">
                    <div class="university-title">EDO STATE UNIVERSITY UZAIRUE</div>
                    <div class="university-address">Km7, Auchi-Abuja Road, Iyamho-Uzairue Edo State, Nigeria.</div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="mt-5 ">
                    Note: This payment does not give access to any of the university facilities!<br>
                    Kindly proceed to make payments in your student Dashboard/wallet
                </div>
            </div>
        </div>
        <hr>
        <div class="section-title">Invoice Details</div>
        <div class="row">
            <div class="col-md-4">
                <div class="subtitle">Ref:</div>
                <div class="detail">@ViewBag.PaymentRef</div>
            </div>
            <div class="col-md-4">
                <div class="subtitle">Receipt No.:</div>
                <div class="detail">@ViewBag.ReceiptNo</div>
            </div>
            <div class="col-md-4">
                <div class="subtitle">WalletID:</div>
                <div class="detail">@ViewBag.WalletId</div>
            </div>
        </div>
        <hr>
        <div class="section-title">Customer Details</div>
        <div class="row">
            <div class="col-md-4">
                <div class="subtitle">Name:</div>
                <div class="detail">@ViewBag.Name</div>
                <div class="subtitle">Email:</div>
                <div class="detail">@ViewBag.Email</div>
            </div>
            <div class="col-md-4">
                <div class="subtitle">Amount:</div>
                <div class="detail">N @ViewBag.Amount</div>
                <div class="subtitle">Description:</div>
                <div class="detail">@ViewBag.Description</div>
            </div>
            <div class="col-md-4">
                <div class="subtitle">Date:</div>
                <div class="detail">@ViewBag.Date</div>
                <div class="signature">
                    <div class="subtitle">Bursar's Signature:</div>
                    <img src="~/images/bsa-1.png" alt="Bursar's Signature">
                </div>
            </div>
        </div>
        <div class="powered-by">
            POWERED BY: EDSU ICT TEAM.
        </div>
    </div>
    <div class="invoice-actions-btn">
        <div class="invoice-action-btn">
            <div class="row">
                <div class="col-md-3">
                    <a href="javascript:void(0);" class="btn-print action-print">Print</a>
                </div>
            </div>
        </div>
    </div>
</div>