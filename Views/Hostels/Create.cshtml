@model EDSU_SYSTEM.Models.Hostel

@{
    ViewData["Title"] = "Create";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <h2>Create Hostel</h2>
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g Hall 1 (M)" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Type" class="control-label"></label>
                                <input asp-for="Type" class="form-control" placeholder="e.g Regular, Premium, Villa..." />
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="Gender" class="form-control">
                                    <option>-- Select --</option>
                                    <option value="M">Male</option>
                                    <option value="F">Female</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount" class="control-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NoOfRooms" class="control-label">No Of Rooms</label>
                                <input asp-for="NoOfRooms" type="number" class="form-control" />
                                <span asp-validation-for="NoOfRooms" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BedspacesCount" class="control-label">Bed spaces Count</label>
                                <input asp-for="BedspacesCount" type="number" class="form-control" />
                                <span asp-validation-for="BedspacesCount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SessionId" class="control-label">Session</label>
                                <select asp-for="SessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
